<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:showDividers="middle"
    tools:context="com.algonquincollege.nana0006.lab1.ChatRoomActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/activity_chat_window"
        class="com.algonquincollege.nana0006.lab1.MessageFragmentA"
        android:layout_width="300dp"
        android:layout_height="1000dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="100dp"
        android:orientation="vertical"
        tools:context="com.algonquincollege.nana0006.lab1.ChatRoomActivity">


        <android.support.v4.widget.SwipeRefreshLayout

            android:id="@+id/swipeRefresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_msg"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_above="@+id/btn_chat_send"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="50dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="alwaysScroll" />


        </android.support.v4.widget.SwipeRefreshLayout>


        <!--  <Button
            android:id="@+id/btn_chat_receive"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/background_floating_material_dark"
            android:text="@string/receive"
            android:layout_margin="10dp"
            android:textColor="@color/background_material_light" />-->


    </LinearLayout>


    <Button
        android:id="@+id/btn_chat_send"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="62dp"
        android:background="@color/background_floating_material_dark"
        android:text="@string/send"
        android:textColor="@color/background_material_light" />

    <EditText
        android:layout_alignParentBottom="true"

        android:id="@+id/msg_type"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="@+id/btn_chat_send"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:autofillHints=""
        android:hint="@string/type_here"
        android:inputType="text" />


    <FrameLayout
        android:id="@+id/message_detail_container"
        android:layout_width="442dp"
        android:layout_height="1080dp"
        android:layout_marginLeft="218dp"
        android:layout_toRightOf="@id/btn_chat_send"
        android:layout_weight="3"
        android:background="@color/colorAccent">

    </FrameLayout>
    <!--
            android:include_layout="@layout/fragmentb"
    -->

</RelativeLayout>


