<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.algonquincollege.nana0006.lab1.ChatRoomActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout class="com.algonquincollege.nana0006.lab1.MessageFragmentA"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_chat_window"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        tools:context="com.example.AndroidDevelopmentClass.Catalog.ChatWindow">

        <android.support.v4.widget.SwipeRefreshLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swipeRefresh">

            <ListView
                android:id="@+id/list_msg"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_chat_send"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="alwaysScroll" />


        </android.support.v4.widget.SwipeRefreshLayout>

        <Button
            android:id="@+id/btn_chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_floating_material_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/send"
            android:layout_margin="10dp"
            android:textColor="@color/background_material_light" />


        <EditText
            android:id="@+id/msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btn_chat_send"
            android:hint="@string/type_here"
            android:inputType="text"
            android:autofillHints="" />

        <Button
            android:id="@+id/btn_chat_receive"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/background_floating_material_dark"
            android:text="@string/receive"
            android:layout_margin="10dp"
            android:textColor="@color/background_material_light" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/message_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_toRightOf="@id/btn_chat_send"
        android:layout_weight="3">

    </FrameLayout>
    <!--
            android:include_layout="@layout/fragmentb"
    -->

</LinearLayout>


